@model TaskManager.Core.GetManyResult<TaskManager.Entities.Entities.Tasks>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
<!-- Font Awesome -->
<link rel="stylesheet" href="~/plugins/fontawesome-free/css/all.min.css">
<!-- Ekko Lightbox -->
<link rel="stylesheet" href="~/plugins/ekko-lightbox/ekko-lightbox.css">
<!-- Theme style -->
<link rel="stylesheet" href="../dist/css/adminlte.min.css">
<!-- overlayScrollbars -->
<link rel="stylesheet" href="~/plugins/overlayScrollbars/css/OverlayScrollbars.min.css">

<div class="content-wrapper kanban">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-6">

                </div>
                <div class="col-sm-6 d-none d-sm-block">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="/User/Index">Home</a></li>
                        <li class="breadcrumb-item active">Task List</li>
                    </ol>
                </div>
            </div>
        </div>
    </section>

    <section class="content pb-3">
        <div class="container-fluid h-100">
            <div class="card card-row card-secondary">
                <div class="card-header">
                    <h3 class="card-title">
                        Backlog
                    </h3>
                </div>
                <div class="card-body">


                    @foreach (var item in Model.Result)
                    {

                        @if (item.State == TaskManager.Core.Enum.State.OnHold)
                        {<div class="card card-info card-outline">
                                <div class="card-header card-outline">

                                    <h5 class="card-title ">Beklemede</h5>
                                    <div class="card-tools">
                                        <a href="#" class="btn btn-tool btn-link">#3</a>
                                        <a class="btn btn-tool" asp-action="TaskDetail" asp-route-id="@item.ID">
                                            <i class="fas fa-pen"></i>
                                        </a>
                                    </div>
                                </div>
                                <div class="card-body  card-outline">

                                    <div class="custom-control">
                                        <span>@item.TaskDescription</span>

                                    </div>

                                </div>
                            </div>
                        }
                    }


                    @foreach (var item in Model.Result)
                    {

                        @if (item.TaskSchedule == TaskManager.Core.Enum.TaskSchedule.daily)
                        {<div class="card card-primary card-outline">
                                <div class="card-header card-outline">

                                    <h5 class="card-title">Günlük</h5>
                                    <div class="card-tools">
                                        <a href="#" class="btn btn-tool btn-link">#3</a>
                                        <a class="btn btn-tool" asp-action="TaskDetail" asp-route-id="@item.ID">
                                            <i class="fas fa-pen"></i>
                                        </a>
                                    </div>
                                </div>
                                <div class="card-body">
                                    <div class="custom-control custom-checkbox">

                                        <div class="custom-control ">
                                            <span>@item.TaskDescription</span>
                                        </div>

                                    </div>
                                </div>

                            </div>
                        }
                    }
                    @foreach (var item in Model.Result)
                    {

                        @if (item.TaskSchedule == TaskManager.Core.Enum.TaskSchedule.weekly)
                        {<div class="card card-primary card-outline">
                                <div class="card-header card-outline">

                                    <h5 class="card-title">Haftalık</h5>
                                    <div class="card-tools">
                                        <a href="#" class="btn btn-tool btn-link">#3</a>
                                        <a class="btn btn-tool" asp-action="TaskDetail" asp-route-id="@item.ID">
                                            <i class="fas fa-pen"></i>
                                        </a>
                                    </div>
                                    <div class="card-body">
                                        <div class="custom-control custom-checkbox">

                                            <div class="custom-control ">
                                                <span>@item.TaskDescription</span>
                                            </div>

                                        </div>
                                    </div>

                                </div>

                            </div>
                        }
                    }
                    @foreach (var item in Model.Result)
                    {

                        @if (item.TaskSchedule == TaskManager.Core.Enum.TaskSchedule.monthly)
                        {<div class="card card-primary card-outline">
                                <div class="card-header card-outline">

                                    <h5 class="card-title">Aylık</h5>
                                    <div class="card-tools">
                                        <a href="#" class="btn btn-tool btn-link">#3</a>
                                        <a class="btn btn-tool" asp-action="TaskDetail" asp-route-id="@item.ID">
                                            <i class="fas fa-pen"></i>
                                        </a>
                                    </div>
                                    <div class="card-body">
                                        <div class="custom-control custom-checkbox">

                                            <div class="custom-control ">
                                                <span>@item.TaskDescription</span>
                                            </div>

                                        </div>
                                    </div>

                                </div>

                            </div>
                        }
                    }
                </div>
            </div>
            <div class="card card-row card-primary">
                <div class="card-header card-outline">
                    <h3 class="card-title">
                        To Do
                    </h3>
                </div>
                <div class="card-body">

                    @foreach (var item in Model.Result)
                    {
                        @if (item.State == TaskManager.Core.Enum.State.ToDo)
                        {<div class="card card-primary card-outline">
                                <div class="card-header">
                                    <h5 class="card-title">@item.TaskName</h5>

                                    <div class="card-tools">
                                        <a href="#" class="btn btn-tool btn-link">#3</a>
                                        <a class="btn btn-tool" asp-action="TaskDetail" asp-route-id="@item.ID">
                                            <i class="fas fa-pen"></i>
                                        </a>
                                    </div>
                                </div>

                                <div class="card-body">
                                    <div class="custom-control custom-checkbox">

                                        <div class="custom-control ">
                                            <span>@item.TaskDescription</span>
                                        </div>

                                    </div>
                                </div>
                            </div>
                        }
                    }

                </div>
            </div>
            <div class="card card-row card-default">
                <div class="card-header bg-info">
                    <h3 class="card-title">
                        Aktif
                    </h3>
                </div>
                <div class="card-body">
                    <div class="card card-light card-outline">
                        @foreach (var item in Model.Result)
                        {

                            @if (item.State == TaskManager.Core.Enum.State.InProgress)
                            {
                                <div class="card-header">
                                    <h5 class="card-title">@item.TaskName</h5>
                                    <div class="card-tools">
                                        <a href="#" class="btn btn-tool btn-link">#3</a>
                                        <a class="btn btn-tool" asp-action="TaskDetail" asp-route-id="@item.ID">
                                            <i class="fas fa-pen"></i>
                                        </a>
                                    </div>
                                </div>
                                <div class="card-body">
                                    <div class="custom-control custom-checkbox">

                                        <div class="custom-control ">
                                            <span>@item.TaskDescription</span>
                                        </div>

                                    </div>
                                </div>
                            }
                        }
                    </div>
                </div>
            </div>
            <div class="card card-row card-success">
                <div class="card-header">
                    <h3 class="card-title">
                        Bitti
                    </h3>
                </div>
                <div class="card-body">
                    <div class="card card-primary card-outline">
                        @foreach (var item in Model.Result)
                        {

                            @if (item.State == TaskManager.Core.Enum.State.Done)
                            {
                                <div class="card-header">
                                    <h5 class="card-title">@item.TaskName</h5>
                                    <div class="card-tools">
                                        <a href="#" class="btn btn-tool btn-link">#3</a>
                                        <a class="btn btn-tool" asp-action="TaskDetail" asp-route-id="@item.ID">
                                            <i class="fas fa-pen"></i>
                                        </a>
                                    </div>
                                </div>
                                <div class="card-body">
                                    <div class="custom-control custom-checkbox">

                                        <div class="custom-control ">
                                            <span>@item.TaskDescription</span>
                                        </div>

                                    </div>
                                </div>
                            }
                        }



                    </div>
                </div>
            </div>
        </div>
    </section>
</div>




<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/admin-lte@3.1/dist/js/adminlte.min.js"></script>
